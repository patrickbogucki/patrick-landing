---
const projects = [
  {
    title: 'Project Alpha',
    description: 'A full-stack web application with real-time data processing and a modern UI.',
    tags: ['TypeScript', 'React', 'Node.js'],
    url: '#',
  },
  {
    title: 'Project Beta',
    description: 'An open-source CLI tool that automates tedious development workflows.',
    tags: ['Rust', 'CLI', 'Open Source'],
    url: '#',
  },
  {
    title: 'Project Gamma',
    description: 'A mobile-first progressive web app for tracking personal goals and habits.',
    tags: ['Astro', 'PWA', 'CSS'],
    url: '#',
  },
  {
    title: 'Project Delta',
    description: 'Machine learning pipeline for analysing and visualising complex datasets.',
    tags: ['Python', 'ML', 'Data'],
    url: '#',
  },
];
---

<section class="projects" id="projects" aria-label="Projects">
  <h2 class="section-title">Projects</h2>
  <div class="projects-grid">
    {projects.map((project) => (
      <a href={project.url} class="project-card" target="_blank" rel="noopener noreferrer">
        <h3 class="card-title">{project.title}</h3>
        <p class="card-description">{project.description}</p>
        <div class="card-tags">
          {project.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
        <span class="card-arrow" aria-hidden="true">&rarr;</span>
      </a>
    ))}
  </div>
</section>

<style>
  .projects {
    max-width: 960px;
    margin: 0 auto;
    padding: 6rem 2rem;
  }

  .section-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-weight: 700;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: var(--text-primary);
    margin-bottom: 3rem;
    text-align: center;
    letter-spacing: -0.01em;
  }

  .section-title::after {
    content: '';
    display: block;
    width: 48px;
    height: 2px;
    background: linear-gradient(to right, var(--accent-warm), var(--accent-cool));
    margin: 0.75rem auto 0;
    border-radius: 1px;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-surface);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    padding: 1.75rem;
    transition:
      background var(--transition),
      border-color var(--transition),
      transform var(--transition),
      box-shadow var(--transition);
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }

  .project-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent-warm-glow), var(--accent-cool-glow));
    opacity: 0;
    transition: opacity var(--transition);
    pointer-events: none;
  }

  .project-card:hover {
    background: var(--bg-surface-hover);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .card-title {
    font-family: 'Inter Variable', 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    position: relative;
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1.25rem;
    flex: 1;
    position: relative;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    position: relative;
  }

  .tag {
    font-size: 0.72rem;
    font-weight: 500;
    color: var(--accent-cool);
    background: var(--accent-cool-glow);
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  .card-arrow {
    position: absolute;
    top: 1.75rem;
    right: 1.75rem;
    font-size: 1.2rem;
    color: var(--text-faint);
    transition: color var(--transition), transform var(--transition);
  }

  .project-card:hover .card-arrow {
    color: var(--accent-warm);
    transform: translateX(4px);
  }

  @media (max-width: 640px) {
    .projects {
      padding: 4rem 1.25rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
